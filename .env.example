# AgentHive Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ENVIRONMENT=development

# Model Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Composio/MCP Integration
COMPOSIO_API_KEY=your_composio_api_key_here

# State Management
REDIS_URL=redis://localhost:6379

# Logging and Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# File Processing
MAX_FILE_SIZE=52428800  # 50MB in bytes

# Security
CORS_ORIGINS=*
API_KEY_REQUIRED=false

# Session Management
SESSION_TIMEOUT=3600  # 1 hour in seconds

# MCP Server Configurations
MCP_GITHUB_TOKEN=your_github_token_here
MCP_LINEAR_API_KEY=your_linear_api_key_here
MCP_FIGMA_TOKEN=your_figma_token_here
MCP_AWS_ACCESS_KEY=your_aws_access_key_here
MCP_AWS_SECRET_KEY=your_aws_secret_key_here